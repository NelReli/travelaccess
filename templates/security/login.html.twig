{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <form method="post" aria-label="connexion à TravelAcess">
        {% if error %}
            <div class="alert alert-danger" role="alert">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <h1 class="text-center mt-5 mb-2">Connexion</h1>
        <p class="text-center mb-5">Connectez-vous à votre compte TravelAccess</p>
        
        {% if app.user %}
            <div class="mb-3 text-center">
                Vous êtes connectés en tant que : <strong>{{ app.user.userIdentifier }} </strong>, <a href="{{ path('app_logout') }}" aria-label="Se déconnecter">Se déconnecter</a>
            </div>
        {% endif %}
            <div class="container d-flex justify-content-center my-5 ">
                <div class="card p-4 shadow rounded-4" style="max-width: 500px; width: 100%;">
                    <div class="m-3">
                        <label for="username">Nom d'utilisateur</label>
                        <input type="text" value="{{ last_username }}" name="_username" id="username" class="form-control"  required autofocus placeholder="Email ou nom d'utilisateur">
                    </div>

                    <div class="m-3">
                        <label for="password">Mot de passe</label>
                        <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required placeholder="Mot de passe">
                        <input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">
                    </div>

                        {# Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                        See https://symfony.com/doc/current/security/remember_me.html #}

                    <div class="d-flex justify-content-between align-items-end">
                        <div class="checkbox m-3">
                            <input type="checkbox" class="form-check-input" name="_remember_me" id="_remember_me">
                            <label class="form-check-label " for="_remember_me">Se souvenir de moi</label>
                        </div>
                        <p  class="m-3"><a href="{{ path('app_forgot_password_request') }}" aria-label="Modification de mot de passe">Mot de passe oublié ?</a></p>
                    </div>

                    <button class="btn btn-lg btn-dark m-3" type="submit" aria-label="Se connecter">Se connecter</button>
                </div>
            </div>
    </form>
    <p class="text-center">Pas encore de compte ? <a href="{{ path('app_register') }}" aria-label="Créer un compte TravelAccess">Rejoignez la communauté</a></p>
{% endblock %}
