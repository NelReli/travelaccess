{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}

<div class="container">
    <h1>Article index</h1>

    <table class="table">
        <thead>
            <tr><th>Id</th><th>Title</th><th>Description</th><th>CreatedAt</th><th>actions</th></tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.title }}</td>
                <td>{{ article.description }}</td>
                <td>{{ article.createdAt ? article.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
<div>
    <a href="{{ path('app_article_show', {id: article.id}) }}" class="btn btn-dark mt-2">Voir l'article</a>

    {% if is_granted('POST_EDIT', article) %}
        <a href="{{ path('app_article_edit', {id: article.id}) }}" class="btn btn-dark mt-2">Modifier l'article</a>
    {% endif %}

    {% if is_granted('POST_DELETE', article) %}
        <a href="{{ path('app_article_delete', {id: article.id}) }}" class="btn btn-dark mt-2">Supprimer l'article</a>
    {% endif %}
</div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_article_new') }}">Create new</a>
</div>
{% endblock %}
