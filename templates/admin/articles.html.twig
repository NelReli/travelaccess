{% extends 'admin/base.html.twig' %}

{% block title %}Articles{% endblock %}

{% block body %}
    <h2 class="mb-4">Liste des articles</h2>
    <div class="table-responsive">
        <table class="table table-striped table-responsive">
            <thead>
                <tr><th>Titre</th><th>Auteur</th><th>Action</th></tr>
            </thead>
            <tbody>

            {% for article in articles %}
                <tr>
                    <td>{{ article.title|title }}</td>
                    <td>{{ article.author.username }}</td>
                    <td>
                        <div class="d-flex gap-2">
                            <a class="btn btn-primary btn-sm" href="{{ path('app_article_show', { id: article.id, slug: article.slug } )}}"><i class="bi bi-eye"></i></a>    
                                <form method="post" action="{{ path('admin_delete_article', {'id': article.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet article ?');">
                                    <input type="hidden" name="_method" value="DELETE">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete_article_' ~ article.id) }}">
                                    <button type="submit" class="btn btn-danger btn-sm">Supprimer</button>
                                </form>
                        </div>
                    </td>   
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
