{% extends 'admin/base.html.twig' %}

{% block page_title %}Tableau de bord{% endblock %}

{% block body %}
<div class="container">
    <!-- Statistiques principales -->
    <div class="row g-4 mb-5">
        <div class="col-12 col-md-4">
            <div class="card shadow-sm border-0 h-100 text-center">
                <div class="card-body">
                    <h5 class="card-title fw-bold text-hero mb-3">
                        <i class="bi bi-people"></i> Utilisateurs
                    </h5>
                    <p class="display-6 fw-bold">{{ userCount }}</p>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-4">
            <div class="card shadow-sm border-0 h-100 text-center">
                <div class="card-body">
                    <h5 class="card-title fw-bold text-hero mb-3">
                        <i class="bi bi-file-text"></i> Articles
                    </h5>
                    <p class="display-6 fw-bold">{{ articleCount }}</p>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-4">
            <div class="card shadow-sm border-0 h-100 text-center">
                <div class="card-body">
                    <h5 class="card-title fw-bold text-hero mb-3">
                        <i class="bi bi-chat-left-text"></i> Commentaires
                    </h5>
                    <p class="display-6 fw-bold">{{ commentCount }}</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Derniers ajouts -->
    <div class="row g-4">
        <!-- Derniers utilisateurs -->
        <div class="col-12 col-lg-4">
            <h4 class="fw-bold border-bottom pb-2 mb-3">Derniers utilisateurs</h4>
            <ul class="list-group list-group-flush shadow-sm rounded">
                {% for user in lastUsers %}
                    <li class="list-group-item">
                        <strong>{{ user.username }}</strong><br>
                        <small class="text-muted">Inscrit le : {{ user.createdAt|date('d/m/Y') }}</small>
                    </li>
                {% else %}
                    <li class="list-group-item text-muted">Aucun nouvel utilisateur.</li>
                {% endfor %}
            </ul>
        </div>

        <!-- Derniers articles -->
        <div class="col-12 col-lg-4">
            <h4 class="fw-bold border-bottom pb-2 mb-3">Derniers articles</h4>
            <ul class="list-group list-group-flush shadow-sm rounded">
                {% for article in lastArticles %}
                    <li class="list-group-item">
                        <a href="{{ path('app_article_show', {slug: article.slug, id: article.id}) }}" target="_blank" class="fw-bold text-decoration-none">
                            {{ article.title }}
                        </a>
                        <br>
                        <small class="text-muted">Publié le : {{ article.createdAt|date('d/m/Y H:i') }}</small>
                    </li>
                {% else %}
                    <li class="list-group-item text-muted">Aucun article récent.</li>
                {% endfor %}
            </ul>
        </div>

        <!-- Derniers commentaires -->
        <div class="col-12 col-lg-4">
            <h4 class="fw-bold border-bottom pb-2 mb-3">Derniers commentaires</h4>
            <ul class="list-group list-group-flush shadow-sm rounded">
                {% for comment in lastComments %}
                    <li class="list-group-item">
                        <strong class="text-primary">{{ comment.author.username|upper }}</strong><br>
                        <a href="{{ path('app_article_show', {slug: comment.article.slug, id: comment.article.id}) }}" target="_blank" class="text-decoration-none">
                            {{ comment.article.title }}
                        </a><br>
                        <span>{{ comment.comment|slice(0, 50) ~ '...' }}</span>
                        <br>
                        <small class="text-muted">{{ comment.createdAt|date('d/m/Y H:i') }}</small>
                    </li>
                {% else %}
                    <li class="list-group-item text-muted">Aucun commentaire récent.</li>
                {% endfor %}
            </ul>
        </div>
    </div>
</div>
{% endblock %}
