{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
        <h1 class="my-5 text-center">Réinitialiser votre mot de passe</h1>
        <div class="container d-flex justify-content-center ">
            <div class="card  p-5 shadow rounded-4" style="max-width: 650px; width: 100%; ">
                {{ form_start(requestForm) }}
                    {{ form_row(requestForm.email) }}
                    <div>
                        <small>
                        Saisissez votre adresse e-mail et nous vous enverrons 
                        un lien pour réinitialiser votre mot de passe.
                        </small>
                    </div>

                    <button class="btn btn-dark w-100 mt-3">Envoyer un e-mail de réinitialisation du mot de passe</button>
                {{ form_end(requestForm) }}
            </div>
        </div>

{% endblock %}