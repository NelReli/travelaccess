{% extends 'base.html.twig' %}

{% block title %}Edit Profile{% endblock %}

{% block body %}
    <h1 class="text-center my-5">Modifier mon profil</h1>
    <div class="container my-5 d-flex justify-content-center ">
        <div class="card p-5 shadow rounded-4" style="max-width: 650px; width: 100%; ">
            {{ form_start(form, {'attr': {'role': 'form', 'aria-label': 'Formulaire d\'Ã©dition de profil'}} ) }}
                <div class="row">
                    <div class="col-lg-6 mb-3">
                        {{ form_label(form.firstname, null, {'label_attr': {'class': 'w-100'}}) }}
                        {{ form_widget(form.firstname) }}
                        {{ form_errors(form.firstname) }}
                    </div>
                    <div class="col-lg-6 mb-3">
                        {{ form_label(form.lastname, null, {'label_attr': {'class': 'w-100'}}) }}
                        {{ form_widget(form.lastname) }}
                        {{ form_errors(form.lastname) }}
                    </div>  
                </div>
                
                <div class="row">
                    <div class="col-lg-6 mb-3">
                        {{ form_label(form.username, null, {'label_attr': {'class': 'w-100'}}) }}
                        {{ form_widget(form.username) }}
                        {{ form_errors(form.username) }}
                    </div>
                    <div class="col-lg-6 mb-3">
                        {{ form_label(form.email, null, {'label_attr': {'class': 'w-100'}}) }}
                        {{ form_widget(form.email) }}
                        {{ form_errors(form.email) }}
                    </div>
                </div>

                <div class="row">
                    <div class="col mb-3">
                        {{ form_label(form.avatar, null, {'label_attr': {'class': 'w-100'}}) }}
                        {{ form_widget(form.avatar) }}
                        {{ form_errors(form.avatar) }}
                    </div>
                </div>

                <div class="row">
                    <div class="col mb-3">
                        {{ form_label(form.bio, null, {'label_attr': {'class': 'w-100'}}) }}
                        {{ form_widget(form.bio, {'attr': { style:"height: 100px"}}) }}
                        {{ form_errors(form.bio) }}
                    </div>
                </div>

                {{ form_widget(form) }}

                <button type="submit" class="btn btn-dark col-12 mb-2">Enregistrer les modifications</button>
                <a href="{{ path('app_profile_show', {'username': app.user.username} ) }}" class="btn btn-dark col-12">
                    Annuler
                </a>

            {{ form_end(form) }}
        </div>
    </div>


{% endblock %}