<div class="col">
    <div class="card h-100">
        {% for image in article.images|slice(0, 1) %}
            <img src="{{ asset('images/articles/' ~ image.name) }}" alt="Image galerie {{ image.name }}" class="card-img-top"style="height: 200px; object-fit: cover">
        {% else %}
            <img src="{{ asset('images/articles/default.jpg') }}" alt="Image par dÃ©faut" class="card-img-top"style="height: 200px; object-fit: cover">
        {% endfor %}

        <div class="card-body">
            <h5 class="card-title">{{ article.title }}</h5>
            <p class="card-text">
                {{ article.description|slice(0, 100) ~ '...' }}
            </p>
            <a href="href="{{ path('app_article_show', {'slug': article.slug, 'id': article.id}) }}" class="btn btn-primary">
                Lire la suite
            </a>
        </div>
    </div>
</div>
