<div class="col">

    <div class="card h-100">
        {% for image in article.images|slice(0, 1) %}
            <img src="{{ asset('images/articles/' ~ image.name) }}" alt="Image galerie {{ image.name }}" class="card-img-top"style="height: 200px; object-fit: cover">
        {% endfor %}

        <div class="card-body">
            <h5 class="card-title"><a class="text-decoration-none text-reset" href="{{ path('app_article_show', {'slug': article.slug, 'id': article.id}) }}" >{{ article.title }}</a></h5>
            <p class="card-text">{{ article.description|slice(0, 100) ~ '...' }}</p>
        </div>
        
        <div class="card-footer bg-white border-0">
            <div class="d-flex gap-3">
                <span class="badge text-dark" aria-label="{{ article.views }} vues"><i class="fa-regular fa-eye me-1" aria-hidden="true"></i> {{ article.views }}</span>
                <span class="badge text-dark" aria-label="{{ commentCounts[article.id]|default(0) }} commentaires"><i class="fa-regular fa-comment me-1" aria-hidden="true"></i> {{ commentCounts[article.id]|default(0) }}</span>
            </div>
        </div>
    </div>

</div>

